        <!-- Spring Web（轻量级）：提供必要的注解支持 -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
        </dependency>

        <!-- Validation API：提供 @NotNull、@Valid 等校验注解 -->
