<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ez.admin.modules.system.mapper.SysUserRoleRelationMapper">

    <!-- 角色信息 ResultMap -->
    <resultMap id="RoleInfoResultMap" type="com.ez.admin.dto.system.vo.RoleInfo">
        <result column="role_id" property="roleId"/>
        <result column="role_label" property="roleLabel"/>
        <result column="role_name" property="roleName"/>
    </resultMap>

    <!-- 根据用户ID查询角色信息列表 -->
    <select id="selectRoleInfoByUserId" resultMap="RoleInfoResultMap">
        SELECT
            r.role_id,
            r.role_label,
            r.role_name
        FROM ez_admin_sys_user_role_relation ur
        INNER JOIN ez_admin_sys_role r ON ur.role_id = r.role_id
        WHERE ur.user_id = #{userId}
          AND r.is_deleted = 0
          AND r.status = 1
        ORDER BY r.role_sort
    </select>

</mapper>
